<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <!-- 标题栏字体设置 -->
    <style name="text_cotent_style">
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 界面统一返回按钮样式 -->
    <style name="back_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">45dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/btn_back</item>
        <item name="android:background">@null</item>
    </style>
    
    <!-- 标题栏字体设置 -->
    <style name="title_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 底部弹出选项框 -->
    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <!-- 系统线条宽度 -->
    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:background">@color/special_line_color</item>
    </style>
    <!-- 微乐动画加载-->
    <style name="weile_loading_dialog_style" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/weile_loading</item>
    </style>


    <style name="animlele" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/head_pull_refresh</item>
    </style>

    <style name="animStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/progress_round</item>
    </style>



    <style name="mine_myFocusOn_tab">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_mine_myfouceson</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="boss_unipay_alert_title">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="boss_unipay_bar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="boss_unipay_btn.noborder" parent="@style/boss_unipay_btn">
    </style>

    <style name="boss_unipay_partline">
        <item name="android:background">@color/boss_unipay_c_thin0</item>
        <item name="android:layout_width">@dimen/boss_unipay_1px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="boss_unipay_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44.0dip</item>
    </style>

    <style name="boss_unipay_line">
        <item name="android:background">@color/boss_unipay_c_thin4</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/boss_unipay_1px</item>
    </style>

    <style name="boss_unipay_tx">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/boss_unipay_c_tx</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="boss_unipay_wrapper">
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="boss_unipay_linear">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="boss_unipay_linear.tipframe" parent="@style/boss_unipay_linear">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ui_alert_bg</item>
        <item name="android:layout_marginLeft">25.0dip</item>
        <item name="android:layout_marginRight">25.0dip</item>
    </style>
</resources>