<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >

            <stroke
                android:width="1px"
                android:color="#999999" />
            <padding
                android:left="6dp" android:top="3dp"
                android:right="3dp" android:bottom="3dp" />
            <solid android:color="@color/item_color_pressed" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle" >

            <stroke
                android:width="1px"
                android:color="#999999" />
            <padding
                android:left="6dp" android:top="3dp"
                android:right="3dp" android:bottom="3dp" />
            <solid android:color="@color/item_color_normal" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >

            <stroke
                android:width="1px"
                android:color="#999999" />
            <padding
                android:left="6dp" android:top="3dp"
                android:right="3dp" android:bottom="3dp" />
            <solid android:color="@color/item_color_normal" />
        </shape>
    </item>
</selector>  